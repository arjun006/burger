<h1>Burgers!</h1>

<div class ="container">
  <div class="row">
    <div class="col'md'8">
      <h4>Add a Burger!</h4>
       <form action="/burgers" method="POST">
      <input type="text" id="burgerName" name="burger_name" placeholder="Add a Burger!">
      <button type="submit" class="aaddBurgerBtn">Add to Plate</button>
    </form>

    </div>
  </div>
  <hr>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <h5>Take a Bite!</h5>
      {{#each burgers}}
      {{#unless this.devoured}}
      <div>
         <form action="/burgers/{{this.id}}" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
      </div>
      {{/unless}}
      {{/each}}
    </div>

    <div class="col-md-6">
      <h5>Burgers you Devoured!</h5>
      {{#each burgers}}
        {{#if this.devoured}}
        <div class="devoured">
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
      {{/each}}

    </div>
  </div>
</div>

